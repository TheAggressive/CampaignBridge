{
  "name": "campaignbridge",
  "version": "0.3.26",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "// VERSION MANAGEMENT": "_",
    "version:sync": "node -e \"import fs from 'fs'; const pkg = JSON.parse(fs.readFileSync('package.json')); let content = fs.readFileSync('campaignbridge.php', 'utf8'); content = content.replace(/\\\\* Version: [0-9]+\\\\.[0-9]+\\\\.[0-9]+/, '* Version: ' + pkg.version); content = content.replace(/public const VERSION = '[0-9]+\\\\.[0-9]+\\\\.[0-9]+'/, 'public const VERSION = \\'' + pkg.version + '\\''); fs.writeFileSync('campaignbridge.php', content); console.log('Synced version:', pkg.version);\"",
    "preversion": "pnpm version:sync",
    "// BLOCK DEVELOPMENT": "_",
    "create-block": "npx @wordpress/create-block@latest --no-plugin --namespace campaignbridge",
    "create-block-dynamic": "npx @wordpress/create-block@latest --no-plugin --namespace campaignbridge --variant dynamic",
    "create-block-interactive": "npx @wordpress/create-block@latest --no-plugin --namespace campaignbridge --template @wordpress/create-block-interactive-template",
    "// BUILD SCRIPTS": "_",
    "build:blocks": "wp-scripts build --config webpack.config.mjs --source-path=./src/blocks --output-path=./dist/blocks",
    "build:interactivity": "wp-scripts build --config webpack.config.mjs --source-path=./src/blocks-interactivity --output-path=./dist/blocks-interactivity --experimental-modules",
    "build:assets": "wp-scripts build --config webpack.assets.config.mjs",
    "build": "pnpm version:sync && concurrently 'pnpm build:blocks' 'pnpm build:interactivity' 'pnpm build:assets'",
    "// DEVELOPMENT SERVERS": "_",
    "start:blocks": "wp-scripts start --config webpack.config.js --source-path=./src/blocks --output-path=./dist/blocks",
    "start:interactivity": "wp-scripts start --config webpack.config.js --source-path=./src/blocks-interactivity --output-path=./dist/blocks-interactivity --experimental-modules",
    "start:assets": "wp-scripts start --config webpack.assets.config.js",
    "start": "concurrently 'pnpm start:blocks' 'pnpm start:interactivity' 'pnpm start:assets'",
    "start:hot": "wp-scripts start --output-path=./dist --hot",
    "start:copy-php": "wp-scripts start --output-path=./dist --webpack-copy-php",
    "js:watch": "wp-scripts start ./src/scripts/app.js --output-path=dist/scripts",
    "// CODE QUALITY": "_",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "format:check": "prettier --check 'src/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "lint:css": "wp-scripts lint-style 'src/**/*.css'",
    "lint:js": "eslint ./src/**/*.{js,jsx,ts,tsx}",
    "lint:fix": "eslint ./src/**/*.{js,jsx,ts,tsx} --fix",
    "fix:all": "pnpm lint:php:fix && pnpm lint:fix && pnpm format",
    "lint:php": "wp-env run tests-cli bash -lc 'cd wp-content/plugins/campaignbridge && XDEBUG_MODE=off ./vendor/bin/phpcs --standard=phpcs.xml.dist includes/ src/'",
    "lint:php:fix": "wp-env run tests-cli bash -lc 'cd wp-content/plugins/campaignbridge && XDEBUG_MODE=off ./vendor/bin/phpcbf --standard=phpcs.xml.dist includes/ src/'",
    "phpstan": "wp-env run tests-cli bash -c 'cd wp-content/plugins/campaignbridge && XDEBUG_MODE=off ./vendor/bin/phpstan analyse --memory-limit=2G --verbose'",
    "security:check": "wp-env run tests-cli bash -c 'cd wp-content/plugins/campaignbridge && find includes/ -name \"*.php\" -exec php -l {} \\; && echo \"PHP syntax check passed\"'",
    "qa": "pnpm lint:php && pnpm lint:js && pnpm format:check && pnpm phpstan && pnpm security:check && pnpm test",
    "// TESTING": "_",
    "test:setup": "bash bin/install-wp-tests.sh wordpress_test root '' 127.0.0.1:9002 latest",
    "test:install": "pnpm test:setup && composer install --dev",
    "test": "wp-env run tests-cli bash -c 'cd wp-content/plugins/campaignbridge && ./vendor/bin/phpunit'",
    "test:unit": "wp-env run tests-cli bash -c 'cd wp-content/plugins/campaignbridge && ./vendor/bin/phpunit --testsuite=unit'",
    "test:integration": "wp-env run tests-cli bash -c 'cd wp-content/plugins/campaignbridge && ./vendor/bin/phpunit --testsuite=integration --verbose'",
    "test:security": "wp-env run tests-cli bash -c 'cd wp-content/plugins/campaignbridge && ./vendor/bin/phpunit --testsuite=security --verbose'",
    "test:accessibility": "wp-env run tests-cli bash -c 'cd wp-content/plugins/campaignbridge && ./vendor/bin/phpunit --testsuite=accessibility --verbose'",
    "test:performance": "wp-env run tests-cli bash -c 'cd wp-content/plugins/campaignbridge && ./vendor/bin/phpunit --testsuite=performance --verbose'",
    "test:coverage": "wp-env run tests-cli bash -c 'cd wp-content/plugins/campaignbridge && ./vendor/bin/phpunit --coverage-html=coverage --coverage-text --verbose'",
    "test:watch": "wp-env run tests-cli bash -c 'cd wp-content/plugins/campaignbridge && ./vendor/bin/phpunit --watch --verbose'",
    "test:any": "wp-env run tests-cli bash -lc 'export XDEBUG_MODE=off; cd /var/www/html/wp-content/plugins/campaignbridge && ./vendor/bin/phpunit'",
    "// ENVIRONMENT MANAGEMENT": "_",
    "env:start": "wp-env start --xdebug",
    "env:stop": "wp-env stop",
    "env:restart": "wp-env stop && wp-env start --xdebug",
    "env:destroy": "wp-env destroy",
    "env:reset": "wp-env destroy && wp-env start --xdebug",
    "// UTILITY SCRIPTS": "_",
    "packages-update": "wp-scripts packages-update",
    "plugin-zip": "wp-scripts plugin-zip"
  },
  "keywords": [],
  "author": "Aggressive Network, LLC",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.1",
    "@types/wordpress__block-editor": "^14.21.0",
    "@types/wordpress__blocks": "^12.5.18",
    "@types/wordpress__edit-post": "^8.4.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@wordpress/annotations": "^3.33.0",
    "@wordpress/api-fetch": "^7.33.0",
    "@wordpress/block-editor": "^15.6.0",
    "@wordpress/block-library": "^9.33.1",
    "@wordpress/blocks": "^15.6.0",
    "@wordpress/components": "^30.6.0",
    "@wordpress/compose": "^7.33.0",
    "@wordpress/core-data": "^7.33.0",
    "@wordpress/data": "^10.33.0",
    "@wordpress/data-controls": "^4.33.0",
    "@wordpress/dependency-extraction-webpack-plugin": "^6.33.0",
    "@wordpress/dom-ready": "^4.33.0",
    "@wordpress/editor": "^14.33.2",
    "@wordpress/element": "^6.33.0",
    "@wordpress/env": "^10.33.0",
    "@wordpress/eslint-plugin": "^22.19.0",
    "@wordpress/hooks": "^4.33.0",
    "@wordpress/html-entities": "^4.33.0",
    "@wordpress/i18n": "^6.6.0",
    "@wordpress/icons": "^11.0.0",
    "@wordpress/interface": "^9.18.0",
    "@wordpress/keyboard-shortcuts": "^5.33.0",
    "@wordpress/keycodes": "^4.33.0",
    "@wordpress/notices": "^5.33.0",
    "@wordpress/scripts": "^30.26.0",
    "@wordpress/url": "^4.33.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "fast-glob": "^3.3.2",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-lightningcss": "^1.0.2",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "react": "^19.2.0",
    "sass": "^1.93.2",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "webpack-merge": "^6.0.1",
    "webpack-remove-empty-scripts": "^1.1.1",
    "wordpress-stubs": "github:php-stubs/wordpress-stubs"
  },
  "dependencies": {
    "react-dom": "18.3.1"
  }
}
