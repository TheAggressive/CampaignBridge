{
  "name": "campaignbridge",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "create-block": "npx @wordpress/create-block@latest --no-plugin --namespace campaignbridge",
    "create-block-dynamic": "npx @wordpress/create-block@latest --no-plugin --namespace campaignbridge --variant dynamic",
    "create-block-interactive": "npx @wordpress/create-block@latest --no-plugin --namespace campaignbridge --template @wordpress/create-block-interactive-template",
    "build:blocks": "wp-scripts build --config webpack.config.js --webpack-src-dir=./src/blocks --output-path=./dist/blocks",
    "build:interactivity": "wp-scripts build --webpack-src-dir=./src/blocks-interactivity --output-path=./dist/blocks-interactivity --experimental-modules",
    "build": "pnpm build:blocks & pnpm build:interactivity",
    "format": "wp-scripts format",
    "lint:css": "wp-scripts lint-style 'src/**/*.css'",
    "lint:js": "wp-scripts lint-js ./src/**/*.js",
    "packages-update": "wp-scripts packages-update",
    "plugin-zip": "wp-scripts plugin-zip",
    "start:blocks": "wp-scripts start --config webpack.config.js --webpack-src-dir=./src/blocks --output-path=./dist/blocks",
    "start:interactivity": "wp-scripts start --webpack-src-dir=./src/blocks-interactivity --output-path=./dist/blocks-interactivity --experimental-modules",
    "start": "concurrently 'pnpm start:blocks' 'pnpm start:interactivity'",
    "start:hot": "wp-scripts start --output-path=./dist --hot",
    "start:copy-php": "wp-scripts start --output-path=./dist --webpack-copy-php",
    "js:watch": "wp-scripts start ./src/scripts/app.js --output-path=dist/scripts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@wordpress/scripts": "^30.21.0",
    "concurrently": "^9.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "webpack-remove-empty-scripts": "^1.1.1"
  }
}
