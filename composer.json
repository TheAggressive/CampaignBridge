{
  "name": "campaignbridge/campaignbridge",
  "description": "A comprehensive WordPress plugin for creating and managing email campaigns",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Aggressive Network, LLC",
      "email": "hello@aggressivenetwork.com"
    }
  ],
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "brain/monkey": "^2.6",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "php-stubs/wordpress-stubs": "^6.6.2",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2",
    "phpstan/phpstan-phpunit": "^2",
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.13.4",
    "szepeviktor/phpstan-wordpress": "^2",
    "wp-coding-standards/wpcs": "^3.2",
    "yoast/phpunit-polyfills": "^4"
  },
  "autoload": {
    "psr-4": {
      "CampaignBridge\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CampaignBridge\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "phpcs": "phpcs --standard=phpcs.xml.dist",
    "phpcbf": "phpcbf --standard=phpcs.xml.dist",
    "phpstan": "phpstan analyse",
    "lint": [
      "@phpcs",
      "@phpstan"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
