{
  "branches": ["main", "master"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "pnpm version:sync",
        "publishCmd": "echo 'ðŸ“¦ Renaming zip: campaignbridge.zip -> campaignbridge-${nextRelease.version}.zip' && ls -lh campaignbridge.zip && mv campaignbridge.zip campaignbridge-${nextRelease.version}.zip && echo 'âœ… Renamed successfully' && ls -lh campaignbridge-${nextRelease.version}.zip"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "campaignbridge.php"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "campaignbridge-${nextRelease.version}.zip",
            "name": "campaignbridge-${nextRelease.version}.zip",
            "label": "CampaignBridge Plugin v${nextRelease.version}"
          }
        ]
      }
    ]
  ]
}
