{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "campaignbridge/post-excerpt",
  "title": "Post Excerpt",
  "category": "widgets",
  "icon": "editor-justify",
  "description": "Shows the post summary with customizable text length and read-more link.",
  "supports": {
    "html": false,
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "textAlign": true,
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "__experimentalFontStyle": true,
      "__experimentalTextDecoration": true,
      "__experimentalLetterSpacing": true
    },
    "color": {
      "text": true,
      "background": true,
      "link": true
    },
    "spacing": {
      "margin": true,
      "padding": true
    },
    "shadow": true
  },
  "attributes": {
    "maxChars": { "type": "number", "default": 240 },
    "showMore": { "type": "boolean", "default": false },
    "moreStyle": { "type": "string", "default": "link" },
    "moreLabel": { "type": "string", "default": "Read more" },
    "linkTo": { "type": "string", "default": "post" },
    "morePrefix": { "type": "string", "default": "" },
    "linkColor": { "type": "string", "default": "#2271b1" },
    "linkUnderline": { "type": "boolean", "default": true },
    "buttonBg": { "type": "string", "default": "#111111" },
    "buttonColor": { "type": "string", "default": "#ffffff" },
    "buttonRadius": { "type": "number", "default": 4 },
    "buttonPaddingX": { "type": "number", "default": 16 },
    "buttonPaddingY": { "type": "number", "default": 10 }
  },
  "usesContext": [
    "campaignbridge:postId",
    "campaignbridge:postType",
    "campaignbridge:showExcerpt"
  ],
  "editorScript": "file:./index.js",
  "render": "file:./render.php"
}
