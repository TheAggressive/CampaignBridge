{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "campaignbridge/post-excerpt",
  "title": "Post Excerpt",
  "category": "widgets",
  "icon": "editor-justify",
  "description": "Shows the post summary with customizable text length and read-more link.",
  "supports": {
    "html": false,
    "inserter": true,
    "multiple": true,
    "reusable": true
  },
  "attributes": {
    "maxWords": { "type": "number", "default": 50 },
    "showMore": { "type": "boolean", "default": false },
    "moreStyle": { "type": "string", "default": "link" },
    "moreLabel": { "type": "string", "default": "Read more" },
    "linkTo": { "type": "string", "default": "post" },
    "morePrefix": { "type": "string", "default": "" },
    "addSpaceBeforeLink": { "type": "boolean", "default": true }
  },
  "providesContext": {
    "campaignbridge/postExcerptUrl": "postUrl"
  },
  "usesContext": ["campaignbridge:postId", "campaignbridge:postType"],
  "allowedBlocks": ["core/paragraph", "core/buttons"],
  "editorScript": "file:./index.js",
  "render": "file:./render.php"
}
