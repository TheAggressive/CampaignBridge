{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "version": "1.0.0",
  "name": "campaignbridge/post-image",
  "title": "Post Image",
  "category": "widgets",
  "icon": "format-image",
  "description": "Displays the post's featured image with customizable borders and effects.",
  "supports": {
    "html": false,
    "color": {
      "background": true,
      "link": true
    },
    "spacing": {
      "margin": true,
      "padding": true
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "shadow": true,
    "dimensions": {
      "minHeight": true,
      "aspectRatio": true
    }
  },
  "usesContext": [
    "campaignbridge:postId",
    "campaignbridge:postType",
    "campaignbridge:showImage"
  ],
  "editorScript": "file:./index.js",
  "render": "file:./render.php"
}
