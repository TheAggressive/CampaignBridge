{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "version": "1.0.0",
  "name": "campaignbridge/post-cta",
  "title": "Post CTA",
  "category": "widgets",
  "icon": "button",
  "description": "Creates a call-to-action button that links to the full post.",
  "supports": {
    "html": false,
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "__experimentalFontStyle": true,
      "__experimentalTextDecoration": true,
      "__experimentalLetterSpacing": true
    },
    "color": {
      "text": true,
      "background": true,
      "link": true
    },
    "spacing": {
      "margin": true,
      "padding": true
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "shadow": true,
    "dimensions": {
      "minHeight": true
    }
  },
  "usesContext": [
    "campaignbridge:postId",
    "campaignbridge:postType",
    "campaignbridge:ctaLabel"
  ],
  "editorScript": "file:./index.js",
  "render": "file:./render.php"
}
